
 /* 上传图片功能  */
.uploader{
  width: 100%;
  display: flex;
  margin-top: 30rpx;
}
.uploader-text{ 
  margin-left:20rpx;
  min-width: 64rpx
}
.uploader-showItem{
  position: relative;
  margin-bottom: 20rpx;
}
.uploade-box{
  display: flex;
  flex-wrap:wrap;
  flex: 1;
}
 .showItem-image{
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid #d9d9d9;
  margin-left: 20rpx;
}
.showItem-icon-box{
  position: absolute;
  top: -1px;
  right: 1px;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50rpx;
  background: #fff;
}
.showItem-icon{
  position: absolute;
  top: -4px;
  right: -4px;
}
.uploader .uploader-btn{
    width: 200rpx;
    height: 200rpx;
    border: 2rpx solid #d9d9d9;
    position: relative;
    margin-left: 20rpx;
}
.uploader-btn-icon:before {
  content: " ";
  position: absolute;
  width: 4rpx;
  height: 79rpx;
  top: 50%;
  left: 50%;
  /* -webkit-transform: translate(-50%, -50%);*/ 
  transform: translate(-50%, -50%); 
  background-color: #d9d9d9;
}
.uploader-btn-icon:after {
  content: " ";
  position: absolute;
  height: 4rpx;
  width: 79rpx;
  top: 50%;
  left: 50%;
  /* -webkit-transform: translate(-50%, -50%);*/
  transform: translate(-50%, -50%); 
  background-color: #d9d9d9;
}
.checkbox{
  font-size: 20rpx;
}
radio{
  transform:scale(0.7);
}